<form class="bg-light text-center col-md-8" action="/edit/{{toy._id}}" method="post">
   <div>
      <h1 class="text text-primary">Edit toy</h1>
   </div>
   <div class="form-group mt-3">
      <label class="text text-success">Name</label>
      <input class="form-control" type="text" name="name" value="{{ toy.name }}" required>
   </div>
   <div class="form-group mt-3">
      <label class="text text-success">Category</label>
      <input class="form-control" type="text" name="category" value="{{ toy.category }}" required>
   </div>
   <div class="form-group mt-3">
      <label class="text text-success">Price</label>
      <input class="form-control" type="text" name="price" value="{{ toy.price }}" required>
   </div>
   <div class="form-group mt-3">
      <label class="text text-success">Quantity</label>
      <input class="form-control" type="number" name="quantity" value="{{ toy.quantity }}" required>
   </div>
   <div class="form-group mt-3">
      <label class="text text-success">Image</label><br>
      <img src="{{ toy.image}}" width="100" height="100"><br>
      <input class="form-control" type="text" name="image" value="{{ toy.image }}" required>
   </div>
   <div class="form-group mt-3">
      <input class="btn btn-danger" type="submit" value="Edit">
   </div>
</form>